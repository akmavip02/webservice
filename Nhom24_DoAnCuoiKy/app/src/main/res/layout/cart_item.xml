<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0C000000"
    android:padding="10dp">

    <ImageView
        android:id="@+id/prd_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@color/black"></ImageView>

    <TextView
        android:id="@+id/prd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/prd_img"
        android:text="Name: "
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/prd_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prd_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/prd_img"
        android:text="Amount:.."
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prd_price"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/prd_img"
        android:layout_below="@id/prd_amount"
        android:text="Total:..">
    </TextView>

</RelativeLayout>